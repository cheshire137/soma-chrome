{
  "manifest_version": 2,
  "name": "SomaPlayer",
  "short_name": "SomaPlayer",
  "description": "Listen to SomaFM web radio stations from your browser and scrobble tracks to your Last.fm account.",
  "version": "0.0.1.2",
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": [
      "socket.io.min.js",
      "lastfm.min.js",
      "config.js",
      "util.js",
      "background.js"
    ]
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://ws.audioscrobbler.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title": "Play/pause SomaFM station"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "defaultStations.json",
    "icon48.png",
    "icon48-dark.png",
    "options.html"
  ],
  "commands": {
    "play/pause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Toggle Play / Pause",
      "global": true
    }
  }
}