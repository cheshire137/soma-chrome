{
  "name": "soma-chrome",
  "productName": "SomaPlayer",
  "description": "An unofficial SomaFM player with Last.fm scrobbling support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/cheshire137/soma-chrome.git"
  },
  "author": {
    "name": "Sarah Vessels",
    "email": "cheshire137@gmail.com",
    "url": "http://3till7.net/"
  },
  "license": "MIT",
  "scripts": {
    "test": "npm run-script style",
    "style": "node node_modules/xo/cli.js extension/background.js extension/options.js extension/popup.js extension/util.js",
    "postinstall": "if [ ! -f extension/config.js ]; then echo \"Copying config.js.example to extension/config.js\"; cp config.js.example extension/config.js; fi"
  },
  "devDependencies": {
    "xo": "^0.15.1"
  },
  "xo": {
    "esnext": true,
    "globals": [
      "document",
      "SomaPlayerUtil",
      "SomaPlayerConfig",
      "io",
      "chrome",
      "window",
      "LastFM",
      "LastFMCache"
    ],
    "space": true,
    "rules": {
      "space-before-function-paren": 0,
      "quotes": [2, "single", {"avoidEscape": true}],
      "dot-location": [2, "object"],
      "babel/object-curly-spacing": [2, "always"],
      "camelcase": [2, {"properties": "never"}],
      "no-new": 0,
      "linebreak-style": 0
    }
  }
}
